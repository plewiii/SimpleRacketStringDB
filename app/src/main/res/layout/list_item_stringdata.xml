<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_activated" >
    <TextView android:id="@+id/stringdata_list_item_mainStringTextView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:paddingTop="4dp"
              android:text="Main String" />
    <TextView android:id="@+id/stringdata_list_item_crossStringTextView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/stringdata_list_item_mainStringTextView"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:paddingTop="4dp"
              android:text="Cross String" />
    <TextView android:id="@+id/stringdata_list_item_dateTextView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/stringdata_list_item_crossStringTextView"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:paddingTop="4dp"
              android:text="String Date" />

</RelativeLayout>